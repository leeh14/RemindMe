<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spoiler.ui.CategoriesActivity">

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:id="@+id/Cates_CategoriesButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:clickable="false" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/Cates_FriendsButton"
        android:layout_alignBottom="@+id/Cates_CategoriesButton"
        android:layout_toRightOf="@+id/Cates_CategoriesButton"
        android:layout_toEndOf="@+id/Cates_CategoriesButton" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/Cates_SettingsButton"
        android:layout_alignBottom="@+id/Cates_FriendsButton"
        android:layout_toRightOf="@+id/Cates_FriendsButton"
        android:layout_toEndOf="@+id/Cates_FriendsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Add New Category"
        android:id="@+id/Cates_AddCategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cates_CategoriesList"
        android:layout_toStartOf="@+id/Cates_SettingsButton"
        android:layout_toLeftOf="@+id/Cates_SettingsButton"
        android:layout_below="@+id/Cates_CategoriesButton"
        android:layout_above="@+id/Cates_AddCategoryButton"
        android:layout_alignRight="@+id/Cates_AddCategoryButton"
        android:layout_alignEnd="@+id/Cates_AddCategoryButton"
        android:layout_marginTop="10dp" />
</RelativeLayout>
