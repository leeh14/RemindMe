<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="spoiler.ui.CategoryActivity">

<Button
    android:layout_width="120sp"
    android:layout_height="wrap_content"
    android:text="Categories"
    android:id="@+id/Cate_CategoriesButton"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="120sp"
    android:layout_height="wrap_content"
    android:text="Friends"
    android:id="@+id/Cate_FriendsButton"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="120sp"
    android:layout_height="wrap_content"
    android:text="Settings"
    android:id="@+id/Cate_SettingsButton"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/Cate_FriendsButton"
    android:layout_toEndOf="@+id/Cate_FriendsButton" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Category Title"
    android:textSize="40sp"
    android:id="@+id/Cate_Title"
    android:layout_below="@+id/Cate_CategoriesButton"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Sort by:"
    android:id="@+id/Cate_Text"
    android:textSize="20sp"
    android:layout_marginRight="31dp"
    android:layout_marginEnd="31dp"
    android:layout_below="@+id/Cate_Title"
    android:layout_toLeftOf="@+id/Cate_SortOptions"
    android:layout_toStartOf="@+id/Cate_SortOptions" />

    <Spinner
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:id="@+id/Cate_SortOptions"
        android:layout_alignRight="@+id/Cate_SettingsButton"
        android:layout_alignEnd="@+id/Cate_SettingsButton"
        android:layout_alignBottom="@+id/Cate_Text"
        android:layout_below="@+id/Cate_Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/Cate_ShareButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/Cate_AddItemButton"
        android:layout_toStartOf="@id/Cate_DeleteButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Add New Item"
        android:id="@+id/Cate_AddItemButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cate_ItemsList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Cate_Text"
        android:layout_above="@+id/Cate_ShareButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/Cate_DeleteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Cate_ItemsList" />

</RelativeLayout>
