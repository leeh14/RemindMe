<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamspoiler.renameme.ShareItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Share Item"
        android:textSize="50sp"
        android:id="@+id/ShareItem_Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/ShareItem_ShareButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/ShareItem_CancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShareItem_ShareList"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ShareItem_Title"
        android:layout_above="@+id/ShareItem_ShareButton" />
</RelativeLayout>
