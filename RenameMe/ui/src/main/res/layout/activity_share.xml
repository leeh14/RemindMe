<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spoiler.ui.ShareActivity">

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:id="@+id/Share_CategoriesButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Share_FriendsButton"
        android:layout_toStartOf="@+id/Share_FriendsButton"
        android:singleLine="false"
        android:longClickable="false"
        android:enabled="true" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/Share_FriendsButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Share_SettingsButton"
        android:layout_toStartOf="@+id/Share_SettingsButton" />

    <Button
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/Share_SettingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Category Title"
        android:textSize="30sp"
        android:id="@+id/Share_CategoryTitle"
        android:layout_below="@+id/Share_CategoriesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share with..."
        android:id="@+id/Share_ShareText"
        android:layout_below="@+id/Share_CategoryTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/Share_ShareButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Share_ShareList"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Share_ShareText"
        android:layout_above="@+id/Share_ShareButton" />

</RelativeLayout>
